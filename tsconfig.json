{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  }, 
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "require": ["typescript-transform-paths/register"]
  },
  "include": ["src", "tests"]
}